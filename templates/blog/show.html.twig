{% extends "base.html.twig" %}

{% block body %}

<article>
    <h2>{{ article.title }}</h2>
    <div class="metadata">written at {{ article.createdAt | date('m/d/Y') }} </div>
    <div class="content">
        <img src="{{ article.image }}" alt="">
        <p>{{ article.content | raw }}</p>
    </div>
</article>

{% endblock %}